
include ../templates/common.jade

mixin explanationList
  each exp, i in explanations
    a.plain-link(href=exp.path)
      div.summary
        if i === 0
          ev1-thumb.ev-thumb
        else if i === 1
          ev2-thumb.ev-thumb
        else
          img.thumb(src=exp.path + '/thumb.gif')
          img.thumb-preview(src= exp.path + '/thumb-preview.png')
        span.release EV !{explanations.length - i} - !{exp.date}
        h3.link !{exp.title}
        p !{exp.quip}

doctype html
html
  include ../templates/head.jade
  body(ng-app="myApp" ng-controller="MainCtrl")
    //- background-stage
    if debug
      section
        pre
          !{JSON.stringify(locals, null, 2)}
    section.landing-demo
      div(style="width:{{slideW}}px;height:200px;")
        landing-demo
    section.landing.slide(ng-init="offsetY=-210" style="width:{{slideW}}px;")
      h1.title(style="text-align:center") Explained Visually
      h2.by-line(style="margin-right:85px;text-align:right;top:-40px;position:relative;").
        a <a href="http://setosa.io"><div class="setosa-logo"></div></a> project
      +share
      h2(style="") About
      p Explained Visually (EV) is a project with the goal to experiment with  new ways of communicating ideas and provide an introduction  to concepts to motivate future learning. We'll be posting a new visual explanation roughly every week for the next few months so stay tuned by signing up for our mailing list.
      +mailchimpSignup
    section
      +explanationList
    script(type='text/javascript')
      include script.js

